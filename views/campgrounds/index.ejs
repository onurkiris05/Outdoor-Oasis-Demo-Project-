<% layout('layouts/boilerplate') %>
<div class="container">
  <div
    id="cluster-map"
    data-campgrounds="<%= encodeURIComponent(JSON.stringify(campgrounds)) %>"
  ></div>
  <div class="camp-container">
    <div class="text-center">
      <h1 class="mb-4">Campgrounds</h1>
      <a class="btn btn-success mb-4" href="/campgrounds/new">Add new campground</a>
    </div>
    <% for (const camp of campgrounds) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img crossorigin="anonymous" src="<%= camp.images[0].url %>" alt="" class="img-fluid" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= camp.title %></h5>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text">
              <small class="text-muted"><%= camp.location %></small>
            </p>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">
              View <%= camp.title%>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script>
  const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
</script>
<script src="/JS/indexPageMap.js"></script>
